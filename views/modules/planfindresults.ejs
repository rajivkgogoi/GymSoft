	  	<input type="submit", value="view Details" />
		 </form>
		 
		 <form align=left  method="post" action="/plan/update">
	  <input type="hidden"  name="plannumber" id="plannumber" value=<%=euipment.plannumber %> />
	  <input type="submit", value="Update" title="Update plan" />
			</form>
			</div>
	   	   </td> 
	   <td width="15%"><%=euipment.Duration%></td>
	   <td width="15%"><%=moment(euipment.startDate).format('MM/DD/YYYY')%></td>
	   <td width="15%"><%=euipment.planPrice%></td>
	   <td width="5%"></td>
	   
	</tr>
	<% }); %>
	
	</table>
		<% } %>
</div>  




