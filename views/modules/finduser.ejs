<% layout( '../layout' ) -%>
<h1 style="margin-bottom:0;" align=center ><%= title %></h1>
<link rel="stylesheet" href="style.css">
<div id="hrr" >
	<form action="/user/findresult" align=Left  method="post" accept-charset="utf-8" align=center>
	 <fieldset>
	  <p>
	   <b>Search:</b><input type="text" size="100" placeholder="Mandatory username...." name="username" />
	  Enter user  Name(60 chars) 
	  </p>
	  
	  Advanced search
	  <script>function unhide(box) {

    var chboxs = document.getElementsByName("c1");
    var vis = "none";
    for(var i=0;i<chboxs.length;i++) { 
        if(chboxs[i].checked){
         vis = "flex";
            break;
        }
    }
    document.getElementById(box).style.display = vis;
	}</script>
	  <input name="Advancedsearch" type="checkbox" value="1" onclick="unhide('hidden-input')">
	  <div  style="display:flex">
		  
	  <p>
	   <b>mobilenumber :</b><input type="text" size="10" name="mobilenumber" />
	  
	  </p>
	  
	    <b>startDate:</b><input type="date"  id="datepicker1"  name="startDate" />
	 </p>
	</div>
	 <input type="submit", value="Search" />
</div>
<div id =table>
<h1 style="margin-bottom:0;" align=left ></h1>

   <style>
		table,th,td
		{
		border:1px solid black;
		border-collapse:collapse;
		}
		th,td
		{
		padding:5px;
		}
		</style>
		
		<% if( users ){ %>
	<table style="width:600px">
	<tr>
	<!-- Colgroup -->
	   <colgroup>
	      <col class="vzebra-odd"> 
	      <col class="vzebra-even">
	    
	   </colgroup>

	  <th bgcolor=BurlyWood ><b>user name</b></th>
	  <th bgcolor=Cornsilk >mobilenumber</th>
	  <th bgcolor=DarkGray >startDate</th>
	  <th bgcolor=Cornsilk >Level</th>
	  <th bgcolor=BurlyWood ><b>Image</b></th>
	
	</tr>
	<% users.forEach( function ( user ){ %>
		<tr>
		 
		<td width="50%"><%=user.username%>
	    <div align=right> 
	   <form align=right method="post" action="/user/details">
		<input type="hidden"  name="usernumber" id="usernumber" value=<%= user.usernumber %> />
	  	<input type="submit", value="view Details" />
		 </form>
		 
		 <form align=left  method="post" action="/user/update">
	  <input type="hidden"  name="usernumber" id="usernumber" value=<%=user.usernumber %> />
	  <input type="submit", value="Update" title="Update user" />
			</form>
			</div>
	   	   </td> 
	   <td width="15%"><%=user.mobilenumber%></td>
	   <td width="15%"><%=moment(user.startDate).format('MM/DD/YYYY')%></td>
	   <td width="15%"><%=user.level%></td>
	   <td width="5%"></td>
	   
	</tr>
	<% }); %>
	
	</table>
		<% } %>
</div>  




